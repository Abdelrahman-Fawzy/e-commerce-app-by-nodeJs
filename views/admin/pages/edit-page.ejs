<%- include('../../_layout/admin-header.ejs'); -%>

<h2 class="page-title">edit page</h2>
<a href="/admin/pages" class="btn btn-primary">back to all pages</a>

<form action="/admin/pages/edit-page/<%= id%>" method="POST">
  <div class="form-group">
    <label>title</label>
    <input class="form-control" type="text" name="title" placeholder="Title" value="<%= title%>">
  </div>
  <div class="form-group">
    <label>slug</label>
    <input class="form-control" type="text" name="slug" placeholder="Slug" value="<%= slug%>">
  </div>
  <div class="form-group">
    <label>content</label>
    <textarea class="form-control" id="ta" name="content" placeholder="Content"><%= content%></textarea>
  </div>
  <button class="btn btn-dark">Submit</button>
</form>
<%- include('../../_layout/admin-footer.ejs'); -%>