<%- include('_layout/header'); -%>
    <div class="row products">
        <% products.forEach(function (product) { %>
            <div class="col-xs-12 col-md-4 product">
                <a href="/products/<%= product.category %>/<%= product.slug %>" class="pa">
                    <img class="pimage" src="/public/product_images/<%= product.fileName %>/<%= product.image %>" alt="">
                </a>
                <h3><%= product.title %></h3>
                <h4>$<%= parseFloat(product.price).toFixed(2) %></h4>
                <a href="/products/<%= product.category %>/<%= product.slug %>" class="vd">view details</a>
            </div>
        <% }); %>
    </div>
<%- include('_layout/footer'); -%>